{%- set downvoteMode = mbin_downvotes_mode() %}
{%- set DOWNVOTES_ENABLED = constant('App\\Utils\\DownvotesMode::Enabled') %}
<aside id="activity" class="options options-activity">
    <div class="options__title">
        <h2>{{ 'activity'|trans }} ({{ entry.countVotes + entry.favouriteCount }})</h2>
    </div>
    <menu class="options__main">
        <li>
            <a href="{{ entry_voters_url(entry, 'up') }}"
               class="{{ html_classes({'active': is_route_name('entry_voters') and route_has_param('type', 'up')}) }}">
                {{ 'up_votes'|trans }} ({{ entry.countUpVotes }})
            </a>
        </li>
        <li>
            <a href="{{ entry_favourites_url(entry) }}"
               class="{{ html_classes({'active': is_route_name('entry_fav')}) }}">
                {{ 'favourites'|trans }} ({{ entry.apLikeCount ?? entry.favouriteCount }})
            </a>
        </li>
        {% if downvoteMode is same as DOWNVOTES_ENABLED %}
            <li>
                <span class="options__nolink">{{ 'down_votes'|trans }} ({{ entry.countDownVotes }})</span>
            </li>
        {% endif %}
    </menu>
</aside>
