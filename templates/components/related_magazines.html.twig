{% if magazines|length %}
    <section{{ attributes.defaults({class: 'magazines section related-magazines'}) }}>
        <h3>{{ title|trans }}</h3>
        <div class="container">
            <ul class="meta">
                {% for magazine in magazines %}
                    <li>
                        {{ component('magazine_inline', {magazine: magazine, showAvatar: true, fullName:false, stretchedLink:true}) }}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endif %}