{% extends '@!NelmioApiDoc/SwaggerUi/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    header::before {
        display: none;
    }
    </style>
    {{ encore_entry_link_tags('app') }}
    <style>
    .swagger-ui code {
        color: inherit;
        display: inherit;
        background: inherit;
        padding: inherit;
        overflow: inherit;
    }
    header #logo {
        position: inherit;
        transform: unset;
    }
    </style>
{% endblock %}

{% block header_block %}
    <header id="header" class="header">
        <div class="mbin-container">
            <nav class="head-nav">
                <div class="brand">
                    <a href="{{ '/' }}">
                        {% if kbin_header_logo() %}
                            <img id="logo" src="{{ asset('mbin_logo.svg') }}" alt="{{ kbin_title() }}">
                        {% else %}
                            <span>{{ kbin_title() }}</span>
                        {% endif %}
                    </a>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}
