{% if header_nav is empty %}
    <li>
        <a href="{{ options_url('content', 'threads', magazine is defined and magazine ? 'front_magazine' : 'front', {'name': magazine.name} ) }}"
           class="{{ html_classes({'active': not is_route_name_contains('user_') and ((is_route_name_starts_with('front') and criteria and 'threads' == criteria.getOption('content')) or is_route_name_contains('_entries') or entry is defined and entry)}) }}">
            {{ 'threads'|trans }} {% if magazine is defined and magazine %}({{ magazine.entryCount }}){% endif %}
        </a>
    </li>
    <li>
        <a href="{{ options_url('content', 'microblog', magazine is defined and magazine ? 'front_magazine' : 'front', {'name': magazine.name} ) }}"
           class="{{ html_classes({'active': ((is_route_name_starts_with('front') and criteria and 'microblog' == criteria.getOption('content')) or is_route_name('posts_front') or is_route_name_contains('posts') or post is defined)  and not is_route_name_contains('user') }) }}">
            {{ 'microblog'|trans }} {% if magazine is defined and magazine %}({{ magazine.postCount }}){% endif %}
        </a>
    </li>
    <li>
        <a href="{{ navbar_people_url(magazine ?? null) }}"
           class="{{ html_classes({'active': (is_route_name_contains('people') or is_route_name_starts_with('user')) and not is_route_name_contains('settings') }) }}">
            {{ 'people'|trans }}
        </a>
    </li>
    {% if app.request.cookies.get(constant('App\\Controller\\User\\ThemeSettingsController::KBIN_GENERAL_TOPBAR')) is not same as 'true' %}
        <li>
            <a href="{{ path('magazine_list_all') }}"
               class="{{ html_classes({'active': is_route_name('magazine_list_all') }) }}">
                {{ 'magazines'|trans }}
            </a>
        </li>
    {% endif %}
{% else %}
    {{ header_nav|raw }}
{% endif %}
