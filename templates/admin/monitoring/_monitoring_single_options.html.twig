<div class="pills">
    <menu>
        <li>
            <a href="{{ path('admin_monitoring') }}">
                <i class="fa fa-solid fa-arrow-left-long" title="{{ 'back'|trans }}"></i>
            </a>
        </li>
        <li>
            <a href="{{ path('admin_monitoring_single_context', {page: 'overview', id: context.uuid.toString()}) }}"
               class="{{ html_classes({'active': route_has_param('page', 'overview')}) }}">
