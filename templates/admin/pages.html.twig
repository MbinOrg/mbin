{% extends 'base.html.twig' %}

{%- block title -%}
    {{- 'settings'|trans }} - {{ parent() -}}
{%- endblock -%}

{% block mainClass %}page-admin-settings page-settings{% endblock %}

{% block header_nav %}
{% endblock %}

{% block sidebar_top %}
{% endblock %}

{% block body %}
    {% include 'admin/_options.html.twig' %}
    <div class="pills">
        <menu>
            <li>
                <a href="{{ path('admin_pages', {page: 'about'}) }}"
                   class="{{ html_classes({'active': route_has_param('page', 'about')}) }}">
                    {{ 'about_instance'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_pages', {page: 'faq'}) }}"
                   class="{{ html_classes({'active': route_has_param('page', 'faq')}) }}">
                    {{ 'FAQ'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_pages', {page: 'contact'}) }}"
                   class="{{ html_classes({'active': route_has_param('page', 'contact')}) }}">
                    {{ 'contact'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_pages', {page: 'terms'}) }}"
                   class="{{ html_classes({'active': route_has_param('page', 'terms')}) }}">
                    {{ 'terms'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_pages', {page: 'privacyPolicy'}) }}"
                   class="{{ html_classes({'active': route_has_param('page', 'privacyPolicy')}) }}">
                    {{ 'privacy_policy'|trans }}
                </a>
            </li>
        </menu>
    </div>
    <div class="section" id="content">
        <div class="container">
            {{ form_start(form) }}
            {{ component('editor_toolbar', {id: 'page_body'}) }}
            {{ form_row(form.body, {label: false, attr: {placeholder: 'body', 'data-controller': 'rich-textarea autogrow', 'data-entry-link-create-target': 'admin_pages'}}) }}
            <div class="row actions">
                {{ form_row(form.submit, {label: 'save', attr: {class: 'btn btn__primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
