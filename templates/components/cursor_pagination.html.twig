<div class="cursor-pagination">
    {% if isForward is same as true %}
        {% if pagination.haveToPaginate %}
            <div class="section">
                <a class="btn btn__primary btn-link" href="{{ options_url('cursor', get_cursor_url_value(pagination.getNextPage())) }}">
                    {{ 'next'|trans|capitalize }}
                </a>
            </div>
        {% endif %}
    {% else %}
        {% if pagination.hasPreviousPage() %}
            <div class="section">
                <a class="btn btn__primary btn-link" href="{{ options_url('cursor', get_cursor_url_value(pagination.getPreviousPage())) }}">
                    {{ 'previous'|trans|capitalize }}
                </a>
            </div>
        {% endif %}
    {% endif %}
</div>
