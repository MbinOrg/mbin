    <div>
        <h4>{{ 'kbin_promo_title'|trans }}</h4>
        <p>{{ 'kbin_promo_desc'|trans({
                '%link_start%': '<a href="https://github.com/MbinOrg/mbin" class="stretched-link">',
                '%link_end%': '</a>'
            })|raw }}</p>
