               class="{{ html_classes({'active': is_route_name('magazine_panel_badges')}) }}">
                {{ 'badges'|trans }}
            </a>
        </li>
        <li>
            <a href="{{ path('magazine_panel_tags', {name: magazine.name}) }}"
               class="{{ html_classes({'active': is_route_name('magazine_panel_tags')}) }}">
                {{ 'tags'|trans }}
