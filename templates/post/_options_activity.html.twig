<aside id="activity" class="options options-activity">
    <div class="options__title">
        <h2>{{ 'activity'|trans }} ({{ (post.countVotes + post.favouriteCount)|abbreviateNumber }})</h2>
    </div>
    <menu class="options__main">
        <li>
            <a href="{{ post_voters_url(post, 'up') }}"
               class="{{ html_classes({'active': is_route_name('post_voters') and route_has_param('type', 'up')}) }}">
                {{ 'up_votes'|trans }} ({{ post.countUpVotes|abbreviateNumber }})
            </a>
        </li>
        <li>
            <a href="{{ post_favourites_url(post) }}"
               class="{{ html_classes({'active': is_route_name('post_favourites')}) }}">
                {{ 'favourites'|trans }} ({{ post.favouriteCount|abbreviateNumber }})
            </a>
        </li>
    </menu>
</aside>
