<markdown-toolbar for="{{ id }}" class="markdown meta" data-controller="markdown-toolbar">
    <md-bold title="{{ 'toolbar.bold'|trans }}" aria-label="{{ 'toolbar.bold'|trans }}">
        <i class="fa-solid fa-bold" aria-hidden="true"></i>
    </md-bold>
    <md-italic title="{{ 'toolbar.italic'|trans }}" aria-label="{{ 'toolbar.italic'|trans }}">
        <i class="fa-solid fa-italic" aria-hidden="true"></i>
    </md-italic>
    <md-strikethrough title="{{ 'toolbar.strikethrough'|trans }}" aria-label="{{ 'toolbar.strikethrough'|trans }}">
        <i class="fa-solid fa-strikethrough" aria-hidden="true"></i>
    </md-strikethrough>
    <md-header title="{{ 'toolbar.header'|trans }}" aria-label="{{ 'toolbar.header'|trans }}">
        <i class="fa-solid fa-heading" aria-hidden="true"></i>
    </md-header>
    <md-quote title="{{ 'toolbar.quote'|trans }}" aria-label="{{ 'toolbar.quote'|trans }}">
        <i class="fa-solid fa-quote-left" aria-hidden="true"></i>
    </md-quote>
    <md-code title="{{ 'toolbar.code'|trans }}" aria-label="{{ 'toolbar.code'|trans }}">
        <i class="fa-solid fa-code" aria-hidden="true"></i>
    </md-code>
    <md-link title="{{ 'toolbar.link'|trans }}" aria-label="{{ 'toolbar.link'|trans }}">
        <i class="fa-solid fa-link" aria-hidden="true"></i>
    </md-link>
    <md-image title="{{ 'toolbar.image'|trans }}" aria-label="{{ 'toolbar.image'|trans }}">
        <i class="fa-solid fa-image" aria-hidden="true"></i>
    </md-image>
    <md-unordered-list title="{{ 'toolbar.unordered_list'|trans }}" aria-label="{{ 'toolbar.unordered_list'|trans }}">
        <i class="fa-solid fa-list" aria-hidden="true"></i>
    </md-unordered-list>
    <md-ordered-list title="{{ 'toolbar.ordered_list'|trans }}" aria-label="{{ 'toolbar.ordered_list'|trans }}">
        <i class="fa-solid fa-list-ol" aria-hidden="true"></i>
    </md-ordered-list>
    <md-mention title="{{ 'toolbar.mention'|trans }}" aria-label="{{ 'toolbar.mention'|trans }}">
        <i class="fa-solid fa-at" aria-hidden="true"></i>
    </md-mention>
    <md-spoiler title="{{ 'toolbar.spoiler'|trans }}" aria-label="{{ 'toolbar.spoiler'|trans }}" data-action="click->markdown-toolbar#addSpoiler">
        <i class="fa-solid fa-triangle-exclamation"></i>
    </md-spoiler>
</markdown-toolbar>
